{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc", // Puedes dejarlo así; con --noEmit no se usará
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,

    "declaration": false, // ⬅️ IMPORTANTE
    "composite": false, // ⬅️ IMPORTANTE
    "incremental": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "dom"],
    "useDefineForClassFields": false,
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "include": ["src/**/*.ts"], // ⬅️ Limitar a código fuente
  "exclude": ["node_modules", "dist", "out-tsc"] // ⬅️ Excluir generados
}
